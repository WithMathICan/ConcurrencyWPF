<Page x:Class="TraderClient.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TraderClient.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <StackPanel Margin="20" Width="200">
        <TextBlock Text="Username"/>
        <TextBox x:Name="UsernameBox" Height="25"/>

        <TextBlock Text="Password" Margin="0,10,0,0"/>
        <PasswordBox x:Name="PasswordBox" Height="25"/>

        <Button Content="Login" Click="Login_Click" Margin="0,10,0,0" Height="25"/>
    </StackPanel>
</Page>
